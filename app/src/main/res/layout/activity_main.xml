<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nameApp"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:text="@string/blocks_escape" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:text="@string/lives" />

        <ImageView
            android:id="@+id/live1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@id/textView"
            android:src="@mipmap/live" />

        <ImageView
            android:id="@+id/live2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@id/live1"
            android:src="@mipmap/live" />

        <ImageView
            android:id="@+id/live3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@id/live2"
            android:src="@mipmap/live" />

        <TextView
            android:id="@+id/textScore"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_toStartOf="@id/textResults"
            android:text="Score:  " />

        <TextView
            android:id="@+id/textResults"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:text="0" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonLeft"
                android:layout_width="207dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"/>

            <Button
                android:id="@+id/buttonRight"
                android:layout_width="207dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/v_left"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_gravity="top|left"
            android:src="@mipmap/brick1"
            android:layout_weight="1"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/v_left2"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_gravity="top|left"
            android:layout_weight="1"
            android:src="@mipmap/brick2"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/v_center"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_gravity="top|center"
            android:layout_weight="1"
            android:src="@mipmap/brick3"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/v_center2"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_gravity="top|center"
            android:src="@mipmap/brick4"
            android:layout_weight="1"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/v_right"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_gravity="top|right"
            android:src="@mipmap/brick5"
            android:layout_weight="1"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/v_right2"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_gravity="top|right"
            android:src="@mipmap/brick6"
            android:layout_weight="1"
            android:visibility="invisible" />

        <RelativeLayout
            android:id="@+id/playerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/player_left"
                android:layout_width="130dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="2dp"
                android:src="@mipmap/player"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/player_center"
                android:layout_width="130dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="2dp"
                android:visibility="visible"
                android:src="@mipmap/player" />

            <ImageView
                android:id="@+id/player_right"
                android:layout_width="130dp"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="2dp"
                android:src="@mipmap/player"
                android:visibility="invisible" />


        </RelativeLayout>

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/leftArrow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="4dp"
            android:background="@mipmap/left" />

        <Button
            android:id="@+id/rightArrow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_margin="4dp"
            android:background="@mipmap/right" />

    </RelativeLayout>
</LinearLayout>

