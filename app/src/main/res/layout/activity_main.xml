<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible"
    android:background="@drawable/wallpaper"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nameApp"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:text="@string/blocks_escape" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:text="@string/lives" />

        <TextView
            android:id="@+id/textResults"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:text="Score:  " />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/v_left"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_gravity="top|left"
            android:layout_weight="1"
            android:background="@color/colorPrimary" />

        <ImageView
            android:id="@+id/v_middle"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_gravity="top|center"
            android:layout_weight="1"
            android:background="@color/colorAccent" />

        <ImageView
            android:id="@+id/v_right"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_gravity="top|right"
            android:layout_weight="1"
            android:background="@color/colorPrimary" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/v_playerLeft"
                android:layout_width="130dp"
                android:layout_alignParentLeft="true"
                android:layout_height="80dp"
                android:src="@mipmap/player"
                android:layout_marginBottom="2dp"
                android:visibility="invisible"
                 />

            <ImageView
                android:id="@+id/v_playerCenter"
                android:layout_width="130dp"
                android:layout_centerHorizontal="true"
                android:layout_height="80dp"
                android:src="@mipmap/player"
                android:layout_marginBottom="2dp"/>

            <ImageView
                android:id="@+id/v_playerRight"
                android:layout_width="130dp"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/player"
                android:visibility="invisible"
                android:layout_marginBottom="2dp"/>


        </RelativeLayout>

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/leftArrow"
            android:layout_alignParentLeft="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@mipmap/left"/>

        <Button
            android:id="@+id/rightArrow"
            android:layout_alignParentRight="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:background="@mipmap/right"/>

    </RelativeLayout>
</LinearLayout>

